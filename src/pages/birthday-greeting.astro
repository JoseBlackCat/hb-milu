import { Image } from 'astro:assets';

interface FriendMessage {
  id: number;
  name: string;
  message: string;
}

const friendMessages: FriendMessage[] = [
  { id: 1, name: "지민", message: "생일 축하해! 오늘 하루 즐겁게 보내길 바라!" },
  { id: 2, name: "서연", message: "행복한 생일 되세요! 멋진 한 해 되길 바랍니다." },
  { id: 3, name: "준호", message: "생일 축하드려요! 건강하고 행복한 한 해 되세요." },
  { id: 4, name: "민지", message: "새로운 나이에서도 늘 행복하시길 바랍니다!" },
  { id: 5, name: "태현", message: "생일 축하해요! 올해는 더욱 특별한 한 해가 되길." }
];
---

<html lang="ko">
<head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    <title>생일 축하합니다! - Happy Birthday!</title>
    <link href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR:wght@400;700&family=Gamja+Flower&display=swap" rel="stylesheet">
</head>
<body class="bg-gradient-to-br from-yellow-100 to-pink-100 font-sans min-h-screen">
    <div class="fixed top-0 left-0 w-full h-full pointer-events-none z-10">
        <div class="absolute w-full h-full bg-[url('/placeholder.svg?height=100&width=100')] opacity-10"></div>
    </div>
    <main class="container mx-auto px-4 py-12 relative z-20">
        <h1 class="text-6xl md:text-8xl font-bold text-red-600 mb-12 text-center font-flower animate-pulse">
            생일 축하합니다!
        </h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
            <div class="bg-white bg-opacity-80 p-8 rounded-3xl shadow-2xl border-4 border-blue-500 transform hover:scale-105 transition-all duration-300 backdrop-blur-sm">
                <h2 class="text-4xl font-semibold text-blue-900 mb-6 font-flower">소중한 지수에게</h2>
                <p class="text-xl text-gray-700 mb-6 leading-relaxed">
                    오늘은 특별한 날입니다. 당신의 생일을 진심으로 축하드립니다! 
                    이 특별한 날을 맞이하여 행복과 기쁨이 가득하시기를 바랍니다.
                    앞으로도 건강하고 행복한 날들이 계속되기를 기원합니다.
                </p>
                <p class="text-xl text-gray-700 font-flower">
                    사랑과 축복을 담아,<br>민수
                </p>
            </div>
            
            <div class="relative overflow-hidden rounded-3xl shadow-2xl border-4 border-red-500 transform hover:rotate-3 transition-all duration-300 group">
                <Image 
                    src="/placeholder.svg?height=600&width=800" 
                    alt="Birthday celebration" 
                    width={800} 
                    height={600}
                    class="w-full h-auto transition-transform duration-300 group-hover:scale-110"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end justify-center p-8">
                    <p class="text-white text-3xl font-bold font-flower transform translate-y-full group-hover:translate-y-0 transition-transform duration-300">행복한 추억</p>
                </div>
            </div>
        </div>
        
        <div class="mt-16 bg-white bg-opacity-80 p-8 rounded-3xl shadow-2xl border-4 border-green-500 backdrop-blur-sm">
            <h2 class="text-4xl font-semibold text-green-800 mb-8 font-flower">생일 축하 메시지</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                {friendMessages.map((friend) => (
                    <div class="bg-white p-6 rounded-2xl shadow-lg transform hover:-translate-y-2 transition-all duration-300">
                        <div class="flex items-center space-x-4 mb-4">
                            <Image 
                                src="/placeholder.svg?height=60&width=60" 
                                alt={`Friend ${friend.id}`} 
                                width={60} 
                                height={60}
                                class="rounded-full border-2 border-green-500"
                            />
                            <p class="font-semibold text-xl text-green-700">{friend.name}</p>
                        </div>
                        <p class="text-gray-600 italic">&ldquo;{friend.message}&rdquo;</p>
                    </div>
                ))}
            </div>
        </div>
        
        <div class="mt-16 text-center">
            <button class="bg-red-600 text-white px-10 py-4 rounded-full text-2xl font-bold hover:bg-red-700 transform hover:scale-110 transition-all duration-300 shadow-lg hover:shadow-2xl font-flower">
                축하 메시지 남기기
            </button>
        </div>

        <div class="mt-16 flex justify-center">
            <div class="w-full max-w-3xl bg-white bg-opacity-80 p-8 rounded-3xl shadow-2xl border-4 border-purple-500 backdrop-blur-sm">
                <h2 class="text-4xl font-semibold text-purple-800 mb-6 font-flower text-center">생일 타임라인</h2>
                <div class="space-y-8">
                    {[2020, 2021, 2022, 2023].map((year) => (
                        <div class="flex items-center">
                            <div class="w-24 text-right pr-4 font-bold text-purple-600">{year}</div>
                            <div class="w-4 h-4 rounded-full bg-purple-500 border-4 border-purple-200"></div>
                            <div class="flex-grow pl-4">
                                <p class="text-lg text-gray-700">이 해의 특별했던 순간을 기억하세요...</p>
                                <Image 
                                    src="/placeholder.svg?height=150&width=300" 
                                    alt={`Memory from ${year}`} 
                                    width={300} 
                                    height={150}
                                    class="mt-2 rounded-lg shadow-md"
                                />
                            </div>
                        </div>
                    ))}
                </div>
            </div>
        </div>
    </main>

    <footer class="bg-gray-800 text-white py-8 mt-16">
        <div class="container mx-auto px-4 text-center">
            <p class="text-xl font-flower">모두의 사랑으로 만들어진 특별한 생일 페이지</p>
            <p class="mt-4">&copy; 2024 Korean Birthday Greetings</p>
        </div>
    </footer>
</body>
</html>

<style>
    .font-flower {
        font-family: 'Gamja Flower', cursive;
    }

    @keyframes float {
        0% { transform: translateY(0px); }
        50% { transform: translateY(-20px); }
        100% { transform: translateY(0px); }
    }

    .animate-float {
        animation: float 6s ease-in-out infinite;
    }

    @keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }

    .animate-fade-in {
        animation: fadeIn 0.5s ease-out forwards;
    }
</style>

<script>
    function createFloatingElement(emoji: string) {
        const element = document.createElement('div');
        element.textContent = emoji;
        element.style.position = 'fixed';
        element.style.left = `${Math.random() * 100}vw`;
        element.style.top = `${Math.random() * 100}vh`;
        element.style.fontSize = `${Math.random() * 20 + 10}px`;
        element.style.opacity = '0.7';
        element.style.pointerEvents = 'none';
        element.style.zIndex = '5';
        element.classList.add('animate-float');
        document.body.appendChild(element);

        setTimeout(() => {
            element.remove();
        }, 10000);
    }

    setInterval(() => {
        createFloatingElement('🎂');
        createFloatingElement('🎉');
        createFloatingElement('🎈');
    }, 2000);
</script>