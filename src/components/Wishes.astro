<section class="py-12 sm:py-16 md:py-20 bg-gradient-to-b from-k-blue/20 to-white">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl sm:text-4xl font-bold text-center mb-8 sm:mb-12 font-noto-kr">간호사의 머리를 맑게 해주는 음악</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6 max-w-6xl mx-auto">
      {albums.map((album) => (
        <div class="bg-white p-6 sm:p-8 rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300 flex flex-col items-center">
          <!-- Imagen del álbum -->
          <img src={album.image} alt={album.title} class="w-full h-48 object-cover rounded-md mb-4" />
          
          <!-- Título del álbum -->
          <h3 class="text-xl sm:text-2xl font-semibold text-center mb-2">{album.title}</h3>
          
          <!-- Artista -->
          <p class="text-gray-600 text-center text-sm sm:text-base mb-4">{album.artist}</p>
          
          <!-- Botón de acción -->
          <a href={album.link} target="_blank" class="px-4 py-2 bg-k-blue text-white rounded-lg hover:bg-k-blue/80 transition">
            Escuchar ahora
          </a>
        </div>
      ))}
    </div>
  </div>
</section>
